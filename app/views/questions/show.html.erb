<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @question.title %>
</p>

<h2> Answers </h2>
<div id="answers">
<% @question.answers.each do | answer| %>
  <%= div_for answer do %>
  <p>
  <strong> Posted <%= time_ago_in_words (answer.created_at ) %>
  </strong> <br />
  <%= h(answer.body) %>
  </p>
  <% end %>
  <% end %>
  </div>

<%= form_for([@question,Answer.new]) do |f| %>
<p> <%= f.label :body, "New Answer" %> <br/>
<%= f.text_area :body %>
</p>
<p> <%= f.submit "Add Answer" %> </p>
<% end %>
<%= link_to 'Edit', edit_question_path(@question) %> |
<%= link_to 'Back', questions_path %>
